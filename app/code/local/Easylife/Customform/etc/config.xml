<?xml version="1.0" encoding="UTF-8"?>
<config>
	<modules>
		<Easylife_Customform>
			<version>1.0.0</version>
		</Easylife_Customform>
	</modules>
	<global>
		<blocks>
			<customform><!-- alias for block -->
				<class>Easylife_Customform_Block</class>
			</customform>
		</blocks>
		<helpers>
			<customform><!-- alias for helper -->
				<class>Easylife_Customform_Helper</class>
			</customform>
		</helpers>
	</global>

	<frontend>
		<routers>
			<customform>
				<use>standard</use>
				<args>
					<module>Easylife_Customform</module>
					<frontName>customform</frontName> <!--url key for module -->
				</args>
			</customform>
		</routers>

		<layout>
			<updates>
				<easylife_customform>
					<file>easylife_customform.xml</file><!-- frontend layout file -->
				</easylife_customform>
			</updates>
		</layout>

		<translate>
			<modules>
				<Easylife_Customform>
					<files>
						<default>Easylife_Customform.csv</default><!-- translation file(not mandatory) -->
					</files>
				</Easylife_Customform>
			</modules>
		</translate>
	</frontend>
</config>