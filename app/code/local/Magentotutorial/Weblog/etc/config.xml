<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Magentotutorial_Weblog>
            <version>0.1.0</version>
        </Magentotutorial_Weblog>
    </modules>
    <frontend>
        <routers>
            <weblog><!-- lowercase of our module name-->
                <use>standard</use>
                <args>
                    <module>Magentotutorial_Weblog</module>
                    <frontName>weblog</frontName>
                </args>
            </weblog>
        </routers>
    </frontend>
    <global>
        <models>
            <weblog><!-- it is the group name which should match to the module name -->
                <class>Magentotutorial_Weblog_Model</class>
                <resourceModel>weblog_resource</resourceModel> <!-- resourceModel indicates which Resource Model that weblog group Models should use -->
            </weblog>
            <weblog_resource>
                <class>Magentotutorial_Weblog_Model_Resource</class>
                <entities>
                    <blogpost>
                        <table>blog_posts</table><!-- Db table name  -->
                    </blogpost>
                </entities>
            </weblog_resource>
        </models>
        
        <resources>
            <weblog_setup><!-- modulename_setup as naming -->
                <setup>
                    <module>Magentotutorial_Weblog</module>
                    <class>Magentotutorial_Weblog_Model_Resource_Setup</class>
                </setup>
            </weblog_setup>
        </resources>
    </global>
</config>
